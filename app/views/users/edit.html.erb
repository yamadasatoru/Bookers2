<div class='body'>
  <div class='container'>
  <div class="row">
    <div class="block">
   <section class="headline">
<h1>User info</h1>
<%= form_with model:@user, local:true do |f| %>
<%= render 'books/error', model: @user %>
  <label for="inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%><br>
  <label for="inputImage">Image</label><br>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %><br>
  <label for="inputIntroduction">Introduction</label><br>
  <%= f.text_area :introduction %><br>

  <%= f.submit "Update User", class:"btn btn-secondary" %>

<% end %>
