<%= render 'books/book', book: @book_new, user: @user %>
<div class="col-md-8 offset-md-1">
  <h2>Book detaile</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
      <tbody>
        <% if current_user.id == @user.id %>
        <tr>
          <td>
            <%= link_to user_path(current_user.id) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %><br>
            <%= @user.name %>
            <% end %>
          </td>
          <td>
            <%= @book.title %>
          </td>
          <td><%= @book.body %></td>
          <td><%= link_to 'Edit', edit_book_path(@book), class:"btn btn-success" %></td>
          <td><%= link_to 'Destroy',book_path(@book), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
        </tr>
        <% else %>
        <tr>
          <td>
          <%= link_to user_path(@user) do %>
          <%= attachment_image_tag @book.user, :profile_image, size: "40x40", fallback: "no_image.jpg" %>
          <br>
          <%= @user.name %>
          <% end %>
          </td>
          <td>
          <%= link_to book_path(params[:id]) do %>
          <%= @book.title %>
          <% end %>
          </td>
          <td><%= @book.body %></td>
        </tr>
        <% end %>
        </thead>
      </tbody>
  </table>
</div>